<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thread_register_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="false"
    tools:context=".ThreadRegisterActivity">

    <RelativeLayout
        android:id="@+id/forum_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/header_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:orientation="vertical"
            app:layout_collapseMode="parallax"
            tools:targetApi="o">

            <com.hootsuite.nachos.NachoTextView
                android:id="@+id/chip_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/no_border_edit_text"
                android:hint="@string/this_is_about"
                android:maxLines="2"
                android:padding="@dimen/button_padding"
                tools:targetApi="o" />

            <View style="@style/forumDivider" />

            <EditText
                android:id="@+id/forum_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="@string/forum_header"
                android:background="@drawable/no_border_edit_text"
                android:hint="@string/header"
                android:inputType="textShortMessage"
                android:padding="@dimen/button_padding"
                android:textStyle="bold"
                tools:targetApi="o" />

            <View
                android:id="@+id/divider"
                style="@style/forumDivider" />


        </LinearLayout>

        <FrameLayout
            android:id="@+id/description_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/toolbox"
            android:layout_below="@id/header_box">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:targetApi="o">

                <LinearLayout
                    android:id="@+id/description_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical" />

            </ScrollView>

            <ImageButton
                android:id="@+id/collapseDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/layout_margin"
                android:background="?android:selectableItemBackgroundBorderless"
                android:padding="@dimen/button_padding"
                android:src="@drawable/remove"
                android:visibility="invisible"
                tools:targetApi="lollipop" />

        </FrameLayout>

        <!--toolbox-->
        <FrameLayout
            android:id="@+id/toolbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:backgroundTint="@color/blue"
            android:clipToPadding="false"
            android:fitsSystemWindows="false">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/add_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    android:onClick="openToolbox"
                    android:padding="@dimen/image_button"
                    android:src="@drawable/add_fill"
                    app:elevation="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/add_content"
                    android:layout_toRightOf="@id/add_content"
                    android:text="@string/new_content" />

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/colorAccent"
                android:onClick="submitThread"
                android:text="@string/submit_forum"
                app:cornerRadius="20dp"
                tools:targetApi="o" />
        </FrameLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/complete_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="@string/please_wait" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>