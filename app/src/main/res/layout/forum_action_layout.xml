<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="1">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/comment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/image_button"
        android:onClick="showCommentBox"
        android:text="@string/comment"
        android:textAllCaps="false"
        app:backgroundTint="@color/quantum_lightgreen300"
        app:cornerRadius="20dp"
        app:elevation="0dp" />

    <GridLayout
        android:id="@+id/grids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_btn"
        android:background="@color/white">

        <ImageButton
            android:id="@id/downVoteButton"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/image_button"
            android:src="@drawable/up" />

        <TextView
            android:id="@+id/upVotes"
            android:layout_gravity="center_vertical"
            android:text="@string/dummy_count" />


        <ImageButton
            android:id="@+id/downVoteButton"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/image_button"
            android:src="@drawable/down" />

        <TextView
            android:id="@+id/downVotes"
            android:layout_gravity="center_vertical"
            android:text="@string/dummy_count" />

        <ImageView
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:padding="@dimen/image_button"
            android:src="@drawable/eye" />

        <TextView
            android:id="@+id/views"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/dummy_count" />

    </GridLayout>

</RelativeLayout>